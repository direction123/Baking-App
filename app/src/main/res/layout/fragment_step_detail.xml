<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="direction123.bakingapp.StepDetailFragment">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/layout_padding_s"
        android:paddingLeft="@dimen/layout_padding_s"
        android:paddingRight="@dimen/layout_padding_s">

        <com.google.android.exoplayer2.ui.SimpleExoPlayerView
            android:id="@+id/step_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/step_video_height" />

        <TextView
            android:id="@+id/step_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryLight"
            android:text="@string/hello_blank_fragment"
            android:layout_marginTop="@dimen/layout_padding_m"
            android:padding="@dimen/layout_padding_m"
            android:textSize="@dimen/body_text_size"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:layout_marginTop="@dimen/layout_padding_m">

            <ImageButton
                android:id="@+id/step_prev_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentLeft="true"
                />

            <TextView
                android:id="@+id/step_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/body_text_size"
                android:layout_centerInParent="true" />

            <ImageButton
                android:id="@+id/step_next_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_forward"
                style="?android:attr/borderlessButtonStyle"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
